{
  "name": "dvsa/authentication-ldap",
  "type": "library",
  "description": "A wrapper around LDAP",
  "keywords": ["dvsa", "authentication", "ldap"],
  "license": "MIT",
  "authors": [
    {
      "name": "DVSA",
      "homepage": "https://www.gov.uk/government/organisations/driver-and-vehicle-standards-agency"
    }
  ],
  "require": {
    "php": "^7.2.5 || ^8.0",
    "ext-json": "*",
    "ext-ldap": "*",
    "ext-openssl": "*",
    "dvsa/contracts": "^1.1",
    "firebase/php-jwt": "^6.3",
    "illuminate/support": "^6.20 || ^8.49",
    "league/oauth2-client": "^2.6",
    "nesbot/carbon": "^2.50",
    "symfony/ldap": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "Dvsa\\Authentication\\Ldap\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dvsa\\Authentication\\Ldap\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "phpunit/phpunit": "^8.5"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
